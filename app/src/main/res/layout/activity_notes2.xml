<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
    android:id="@+id/linearLayout_notes2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/notes"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout2"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:fontFamily="@string/font"
            android:gravity="center"
            android:text="Your Diary                  "
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:id="@+id/textView3_2" />

        <ImageButton
            android:id="@+id/save2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:onClick="save"
            android:src="@drawable/ic_save_black_24dp"
            android:layout_marginEnd="14dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/discard2" />


        <ImageButton
            android:id="@+id/discard2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel_black_24dp"
            android:onClick="discard"
            android:layout_alignTop="@+id/textView3_2"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Story2"
        android:textSize="22dp"
        android:fontFamily="@string/font"
        android:hint=" Type Here"
        android:paddingTop="20dp"
        android:textColor="@color/textColor"
        android:lineSpacingExtra="10dp"
        android:gravity="top"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true" />


</RelativeLayout>